<div class="wrapper_with_padding">
	<div id="content">
		<div class="page_header">
			<h1> <strong>Welcome back.</strong> Find the next journey that awaits you in Toronto.</h1>
		</div>
	</div>
	<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
	  <div class="form-inputs">
	    <%= f.input :email, required: false, placeholder: 'Enter your email address' %>
	    <%= f.input :password, required: false, placeholder: 'Password' %>
	    <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
  		<%= link_to "Forgot your password?", new_password_path(resource_name), class: 'forgot-password' %>
	  </div>

	  <div class="form-actions">
	    <%= f.button :submit, "Log in", class: 'button' %>
	  </div>
	<% end %>

	<%= render "devise/shared/links" %>
</div>