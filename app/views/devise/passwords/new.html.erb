<div class="wrapper_with_padding">
  <div id="content">
    <div class="page_header">
      <h1><strong>Forgot your password?</strong> Don't worry, we've got you covered.</h1>
      <p>Type your email in below and we will send you a link to reset your password.</p>
    </div>
  </div>

	<%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
	  <%= f.error_notification %>

	  <div class="form-inputs">
	    <%= f.input :email, required: true %>
	  </div>

	  <div class="form-actions">
	    <%= f.button :submit, "Send me reset password instructions", class: 'button' %>
	  </div>
	<% end %>

	<%= render "devise/shared/links" %>
</div>